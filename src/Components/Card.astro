---
// Props: title, description, imageUrl, demoUrl, repoUrl
export interface Props {
    title: string,
    description: string,
    imageUrl: string,
    demoUrl: string,
    repoUrl: string,
}

const {title, description, imageUrl, demoUrl, repoUrl} = Astro.props as Props


const base = '/Portfolio/'
---
  
  <div class="w-[400px] min-w-[300px] h-[500px]  rounded-2xl m-auto rounded-tl-2xl rounded-tr-2xl rounded-bl-2xl ronded-br-2xl overflow-hidden shadow-md hover:shadow-xl hover:scale-102 transition-transform duration-150 border-4 border-transparent hover:border-red-300 cursor-pointer" onclick={`window.open('${demoUrl}', '_blank');`}>
            <div class="w-[100%] h-[50%] border-none border-b-amber-50 border-4">
                {imageUrl && (<img src={imageUrl} class="w-full h-[100%] object-contain border-b-amber-50 border-b-4">)}
                
            </div>
            <div class="w-[100%] relative min-w-[300px] h-[50%] bg-fuchsia-800  flex flex-col  gap-4">
                <p class="text-3xl text-amber-50  font-black ml-6 mt-4">{title}</p>
                <div class="flex">

                    <p class="text-1xl sm:text-2xl text-amber-50 ml-6">{description}</p>
                    <div>
                        
                    </div>
                    <img src=`${base}./icons/linkto.svg` alt="Icon to extern page" class="w-[50px]  mt-2 absolute top-0 right-0" >
                </div>
            </div>
        </div>
    </div>